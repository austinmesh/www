---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Import all partner images
import aisdLogo1 from '../images/aisd/AISD-GusGarcia-Logo.svg';
import aisdLogo2 from '../images/aisd/AISD-Hart-Logo.svg';
import aisdLogo3 from '../images/aisd/AISD-LBJ-Logo.svg';
import aisdHero from '../images/aisd/aisd-hart-elementary-meshtastic-install.webp';
import lasaImage from '../images/lasa/austin-mesh-liberal-arts-and-sciences-academy-cropped.webp';
import utAustinImage from '../images/ut-austin/University-of-Texas-at-Austin-Meshtastic-Repeater.webp';

// Create image map for partner assets
const partnerImages = {
  'aisd': {
    headerImages: [aisdLogo1, aisdLogo2, aisdLogo3],
    images: [aisdHero],
    heroImage: aisdHero
  },
  'lasa': {
    headerImages: [],
    images: [lasaImage],
    heroImage: null
  },
  'ut-austin': {
    headerImages: [],
    images: [utAustinImage],
    heroImage: null
  }
};

export interface Props {
  featured?: boolean;
  limit?: number;
  showTitle?: boolean;
  title?: string;
}

const { 
  featured, 
  limit, 
  showTitle = true, 
  title = "Our Community Partners" 
} = Astro.props;

let partners = await getCollection('partners', (partner) => {
  if (!partner.data.active) return false;
  if (featured !== undefined && partner.data.featured !== featured) return false;
  return true;
});

// Sort by order, then by name
partners = partners
  .sort((a, b) => {
    if (a.data.order !== b.data.order) {
      return a.data.order - b.data.order;
    }
    return a.data.name.localeCompare(b.data.name);
  })
  .slice(0, limit || partners.length);

// Render content for each partner
const partnersWithContent = await Promise.all(
  partners.map(async (partner) => {
    const { Content } = await partner.render();
    return { ...partner, Content };
  })
);
---

{partners.length > 0 && (
  <section class="partners-section">
    {showTitle && (
      <h2>{title}</h2>
    )}
    
    <div class="partners-grid">
      {partnersWithContent.map((partner) => (
        <article class="partner-card">
          <h3 class="partner-heading">
            <a href={`/partners/${partner.slug}`}>
              {partner.data.name}
            </a>
          </h3>
          
          {/* Show header images in a row if they exist */}
          {partnerImages[partner.slug]?.headerImages.length > 0 && (
            <div class="partner-header-images">
              {partnerImages[partner.slug].headerImages.map((image) => (
                <a href={`/partners/${partner.slug}`}>
                  <Image 
                    src={image}
                    alt={`${partner.data.name} logo`}
                    loading="lazy"
                    class="header-image"
                    width={240}
                  />
                </a>
              ))}
            </div>
          )}
          
          {/* Fallback to single logo if no header images */}
          {partnerImages[partner.slug]?.headerImages.length === 0 && partner.data.logo && (
            <div class="partner-logo">
              <a href={`/partners/${partner.slug}`}>
                <img 
                  src={partner.data.logo} 
                  alt={`${partner.data.name} logo`}
                  loading="lazy"
                  class="white-bg"
                />
              </a>
            </div>
          )}
          
          <div class="partner-content">
            <partner.Content />
          </div>
          
          {/* Show all images from the images array */}
          {partnerImages[partner.slug]?.images.length > 0 && (
            <div class="partner-images">
              {partnerImages[partner.slug].images.map((image) => (
                <a href={`/partners/${partner.slug}`}>
                  <Image 
                    src={image}
                    alt={`${partner.data.name} installation`}
                    loading="lazy"
                    class="partner-image"
                    width={400}
                  />
                </a>
              ))}
            </div>
          )}
          
          <div class="partner-links">
            <a href={`/partners/${partner.slug}`}>
              Learn More â†’
            </a>
            {partner.data.website && (
              <a href={partner.data.website} target="_blank" rel="noopener">
                Visit Website
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </section>
)}

<style>
  .partners-section {
    margin: 2rem 0;
  }
  
  .partners-grid {
    display: block;
    margin-top: 1.5rem;
  }
  
  .partner-card {
    margin-bottom: 3rem;
    padding: 0;
  }
  
  .partner-heading {
    margin: 0 0 1rem 0;
    color: #333;
  }
  
  .partner-location {
    font-weight: normal;
    color: #666;
    font-size: 0.9em;
  }
  
  .partner-logo {
    text-align: center;
    margin: 1rem 0;
  }
  
  .partner-logo img {
    max-width: 200px;
    height: auto;
  }
  
  .partner-header-images {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    gap: 1rem;
    margin: 1rem 0;
  }
  
  .header-image {
    max-width: 240px;
    height: auto;
    padding: 10px;
    background-color: #fff;
    min-height: 70px;
    transition: transform 0.2s ease;
  }
  
  .header-image:hover {
    transform: translateY(-2px);
  }
  
  .partner-content {
    line-height: 1.6;
    margin: 1rem 0;
  }
  
  .partner-images {
    margin: 1.5rem 0;
    text-align: center;
  }
  
  .partner-image {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .partner-links {
    margin-top: 1rem;
    text-align: center;
  }
  
  .partner-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .partner-links a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #67EA94;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.2s ease;
  }
  
  .partner-links a:hover {
    background: #2ce26a;
  }
  
  .partner-heading a {
    color: inherit;
    text-decoration: none;
  }
  
  .partner-heading a:hover {
    color: var(--accent);
  }
  
  @media (min-width: 768px) {
    .partner-header-images {
      flex-direction: row;
    }
  }
</style>